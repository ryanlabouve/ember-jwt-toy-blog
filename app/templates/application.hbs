<div class="container">
  <div class="row header">
    <div class="col-sm-6">
      <h1>Posts</h1>
    </div>
    <div class="col-sm-6">
      {{#if session.isAuthenticated}}
        {{current-user}}
      {{else}}
        {{user-login}}
      {{/if}}
    </div>
  </div>

  <div class="row body">
    <div class="col-sm-6">
      {{public-posts posts=model}}
    </div>
    <div class="col-sm-6">
      {{private-posts}}
    </div>
  </div>


  {{outlet}}
</div>
